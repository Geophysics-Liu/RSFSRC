from rsf.proj import *

# SConscript('../fetch/SConstruct')

Flow('foldplot','../fetch/npr3_field_hdr.rsf',
    '''
      dd type=float |
      fold
          verbose=1
          o1=0 n1=96  d1=200 label1=offset
          o2=1 n2=188 d2=1   label2=xline
          o3=1 n3=345 d3=1   label3=iline        
    ''')

Plot('foldplot','foldplot',
     '''
     grey  title=foldplot pclip=100 
     ''',view=1)

Result('foldplot3','foldplot',
     '''
     byte gainpanel=all |
     grey3  title=foldplot pclip=100 
	    frame1=24 frame2=94 frame3=172
     ''')

Flow('foldplot_off','foldplot',
     'transp plane=13')

Plot('foldplot_off','grey title=foldplot pclip=100',view=1)

# Xline/Inline numbers
Flow('ix','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="xline"')
Flow('il','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="iline"')
Flow('ixil',['ix','il'],'cmplx ${SOURCES[1]}')
Result('ixil','graph symbol="+" title="Xline/Inline number" plotcol=2')

# Xline/Inline coordinates
Flow('ixc','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="cdpx"')
Flow('ilc','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="cdpy"')
Flow('ixilcoord',['ixc','ilc'],'cmplx ${SOURCES[1]}')
Result('ixilcoord','graph symbol="+" title="cdp (x,y)" plotcol=4')

# Shot coordinates
Flow('sx','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="sx"')
Flow('sy','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="sy"')
Flow('sxsycoord',['sx','sy'],'cmplx ${SOURCES[1]}')
Result('sxsycoord','graph symbol="+" title="Shot (x,y)" plotcol=5')

# Receiver coordinates
Flow('gx','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="gx"')
Flow('gy','../fetch/npr3_field_hdr.rsf','dd type=float | headermath output="gy"')
Flow('gxgycoord',['gx','gy'],'cmplx ${SOURCES[1]}')
Result('gxgycoord','graph symbol="+" title="Group (x,y)" plotcol=3')

End()

